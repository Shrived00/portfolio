import { PORTFOLIO_DETAILS_REQUEST, PORTFOLIO_DETAILS_SUCCESS, PORTFOLIO_DETAILS_FAILS } from '../constants/portfolioConstants';

export const portfolioDetailsReducer = (state = { portfolio: [] }, action) => {
    switch (action.type) {
        case PORTFOLIO_DETAILS_REQUEST:
            return [{ loading: true, portfolio: {} }];
        case PORTFOLIO_DETAILS_SUCCESS:
            return [{ loading: false, portfolio: action.payload }];
        case PORTFOLIO_DETAILS_FAILS:
            return [{ loading: false, error: action.payload }];
        default:
            return state;
    }
}

export default portfolioDetailsReducer;